<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/follower.css">
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>  
            <% if (followers.length >0) { %>
                <div class='content'>
                    <h1 style='color:lime;'> Follower</h1>
                    <div style='background-color: lime;'>
                    <% for(let follower of followers) { %>
                        <h2 style='color:white;'><%= follower.email %></h2>
                        <a href="/remove-follower/<%=profileId%>/<%=follower.userId %>/<%=follower.email %>" class="btn">Remove</a>  
                     <% } %> 
                    </div>
                </div>
            <% } else { %>
                <h1>No Followers</h1>  
            <% }  %> 
        </main>
    </body>
    </html>